generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
    id          Int        @id @default(autoincrement())
    email       String      @unique
    firstNames  String
    lastNames   String
    roles       Role[]     @default([USER])
    createdAt   DateTime    @default(now())
    password    String
    avatar      String?
    active      Boolean     @default(true)
}

enum Role {
    ROOT
    ADMIN
    EDITOR
    USER
}

